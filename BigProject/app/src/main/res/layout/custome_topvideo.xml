<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="296dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:background="#444444"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="249dp">
        <VideoView
            android:fitsSystemWindows="true"
            android:layout_centerInParent="true"
            android:id="@+id/videoTOPView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_marginTop="2dp"
        android:layout_below="@id/cv"
        android:textSize="12dp"
        android:paddingLeft="5dp"
        android:id="@+id/ContentVideoTOP"
        android:layout_marginLeft="3dp"
        android:text="My video"
        android:textColor="#CDBCBC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:layout_marginTop="2dp"
        android:id="@+id/iconLoves"
        android:layout_marginLeft="3dp"
       android:layout_below="@id/cv"
        android:layout_toLeftOf="@id/likesnumberTOP"
        android:src="@drawable/ic_action_love"
        android:layout_width="16dp"
        android:layout_height="16dp"/>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"
        android:id="@+id/likesnumberTOP"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/cv"
        android:text="1,2k"
        android:textSize="10dp"
        android:textColor="#FFCDBCBC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
</RelativeLayout>